module "{{ hop_name }}" {
  source = "./{{ hop_name }}"
  AZ_TENANT       = var.AZ_TENANT
  AZ_SECRET       = var.AZ_SECRET
  AZ_SUB_ID       = var.AZ_SUB_ID
  AZ_APP_ID       = var.AZ_APP_ID
}

{% if 'hop1' in hop_name %}
output "hop1_public_ip" {
  value = module.{{ hop_name }}.public_ip
}
{% elif 'hop2' in hop_name %}
output "hop2_public_ip" {
  value = module.{{ hop_name }}.public_ip
}
{% endif %}

